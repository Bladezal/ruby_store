<h1>Companies</h1>

<ul>
    <% @companies.each do |company| %>
        <li>
            <%= company.name %> <%= button_to 'Modify', edit_company_path(company.id), method: :get %> <%= button_to 'Delete', company_path(company.id), method: :delete, data: { confirm: "Are you sure?" } %>
        </li>
    <% end %>
</ul>

<%= button_to 'Home', root_path, method: :get %>
<%= button_to 'Create', new_company_path, method: :get %>
