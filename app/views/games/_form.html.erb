<%= form_with model: @game do |form| %>
    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
      <% @game.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    </div>
  
    <div>
      <%= form.label :price %><br>
      <%= form.number_field :price, step: 0.5 %>
      <% @game.errors.full_messages_for(:price).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :platform %><br>
      <%= form.collection_select :platform_id, Platform.order(:name), :id, :name, prompt: true%>
    </div>

    <div>
      <%= form.label :description %><br>
      <%= form.text_area :description %>
      <% @game.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.submit %>
    </div>
<% end %>

<%= button_to 'Back', games_path, method: :get %>